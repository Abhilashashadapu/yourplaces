{
  "version": 2,
  "name": "yourplaces-frontend",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_BACKEND_URL": "$REACT_APP_BACKEND_URL",
    "REACT_APP_GOOGLE_MAPS_API_KEY": "$REACT_APP_GOOGLE_MAPS_API_KEY",
    "REACT_APP_NAME": "YourPlaces",
    "REACT_APP_VERSION": "1.0.0"
  }
}
